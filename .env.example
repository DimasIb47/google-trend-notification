# Environment Configuration for Google Trends Gaming Alert System

# Discord webhook URL (required)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Polling interval in seconds (random jitter between min and max)
POLL_INTERVAL_MIN=60
POLL_INTERVAL_MAX=120

# Geo codes to monitor (comma-separated)
GEOS=US,GB,ID

# Google Trends category ID (6 = Games)
CATEGORY_ID=6

# Time window in hours
HOURS=24

# Database path (relative to app root)
DATABASE_PATH=./data/trends.db

# Deduplication TTL in hours (records older than this are cleaned up)
DEDUPE_TTL_HOURS=48

# Default timezone for date_key calculation
TIMEZONE=Asia/Jakarta

# Health check server port
HEALTH_PORT=8080

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
